{
  "name": "@buckley/desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "bun --cwd ../../web run dev",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "build": "../../scripts/build-ui.sh",
    "package": "npm run build && (cd ../.. && go build -o apps/desktop/dist/buckley ./cmd/buckley)",
    "preview": "bun --cwd ../../web run preview -- --port 5174",
    "start": "npm run package && cross-env BUCKLEY_UI_ASSETS_DIR=../../pkg/ipc/ui electron ."
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^40.0.0",
    "wait-on": "^7.0.1"
  }
}
